{
    "manifest_version": 3,
    "name": "Bookmark Alert",
    "description": "Bookmark Alert helps you stay organized by providing reminders for websites you bookmark. Never forget to revisit important pages with this handy extension.",
    "version": "1.0.0",
    "author": "Sivani",
    "permissions": [
      "notifications",
      "bookmarks",
      "tabs",
      "alarms",
      "storage"
    ],
    "action": {
      "default_icon": "assets/icon16.png",
      "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
    
}
  